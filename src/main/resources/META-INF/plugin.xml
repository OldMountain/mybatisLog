<idea-plugin>
    <id>org.example.mybatisLog</id>
    <name>Mybatis Log</name>
    <vendor email="1351395043@qq.com">酷酷的追</vendor>

    <description><![CDATA[
    Kukuz Mybatis log plugin support..<br>
    <em>自用</em>
    <em>功能不完善</em>
    ]]></description>
    <version>2.2.1</version>
    <change-notes><![CDATA[
      <p>
      2.2.1
      <ul>
      <li>支持idea2020.3版本</li>
      </ul>
      <p>
      1.0
      <ul>
      <li>2020.5.14 测试使用第一版</li>
      <li>bug多多，功能不全，性能不高</li>
      </ul>
    ]]></change-notes>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
<!--    <depends>com.intellij.modules.java</depends>-->
    <depends>com.intellij.java</depends>
    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="formatLog" class="org.lhq.mybatisLog.formatLog" text="FormatLog" description="格式化sql">
            <add-to-group group-id="ConsoleView.PopupMenu" anchor="first"/>
            <add-to-group group-id="BasicEditorPopupMenu" anchor="first"/>
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ConsoleEditorPopupMenu" anchor="first"/>
            <add-to-group group-id="Diff.EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>